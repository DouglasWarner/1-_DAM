<Window x:Class="Ejercicio4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Suma de Números en Intervalo" Height="350" Width="525">
    <Grid>
        <StackPanel VerticalAlignment="Center" Margin="40,0,10,0">
            <Label Content="*Suma de los números entres N1 y N2*" Foreground="Red" FontSize="20" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Label Content="Número Inicial: " FontSize="15" Foreground="Blue"/>
                <TextBox Name="tbxN1" Text="N1" Width="80" VerticalContentAlignment="Center" GotFocus="tbxN1_GotFocus"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Label Content=" Número Final: " FontSize="15" Foreground="Blue"/>
                <TextBox Name="tbxN2" Text="N2" Width="80" Margin="3,0,0,0" VerticalContentAlignment="Center" GotFocus="tbxN2_GotFocus"/>
            </StackPanel>
        </StackPanel>
        <Button Name="btnSumar" Content="Sumar" Foreground="Blue" BorderBrush="YellowGreen" FontSize="20" Height="40" Width="90" HorizontalAlignment="Left" Margin="300,40,0,0" Click="btnSumar_Click"/>
        <StatusBar VerticalAlignment="Bottom">
            <Label Name="lblResultado" Content="texto resultado" Foreground="Red" VerticalAlignment="Bottom" Margin="20,0,0,0"/>
        </StatusBar>
    </Grid>
</Window>
