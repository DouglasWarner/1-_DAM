<Window x:Class="Ejercicio3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Acierta_Un_Numero" Height="350" Width="525">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
            <Button Name="btnGenerar" Content="Generar Número" Margin="95,74,0,0" Width="97" Height="34" Click="btnGenerar_Click"/>
            <CheckBox Name="chbVerNumero" Content="Ver Número" Margin="120,74,0,0" Height="34" Width="98" Checked="chbVerNumero_Checked" Unchecked="chbVerNumero_Unchecked"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Height="51" Margin="0,142,0,127">
            <Label Content="Acierta el Número" VerticalAlignment="Top" Margin="80,0,0,0"/>
            <TextBox Name="txbNumero" Text="Inserta el número" FontStyle="Italic" Height="28" Width="120" VerticalAlignment="Bottom" Margin="-100,0,0,0" GotFocus="txbNumero_GotFocus_1"/>
            <Button Name="btnProbar" Content="Probar" Width="92" Height="35" Margin="100,0,0,0" IsEnabled="False" Click="btnProbar_Click" />
        </StackPanel>
        <Label Name="lbMensaje" FontWeight="Bold" FontSize="15" Margin="50,0,0,50" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="30" Width="435"/>
    </Grid>
</Window>
